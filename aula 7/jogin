<body>
  <div class="game-container">
    <div class="message" id="message"></div>
    <div class="hoop"></div>
    <div class="net"></div>
    <div class="ball" id="ball" title="Clique para arremessar"></div>
  </div>

<script>
  const ball = document.getElementById('ball');
  const message = document.getElementById('message');
  let shooting = false;

  ball.addEventListener('click', () => {
    if (shooting) return; // Evita arremessos simultÃ¢neos

    shooting = true;
    message.textContent = '';
    
    // Animar a bola para cima e para a direita
    ball.style.transition = 'bottom 0.6s ease-out, left 0.6s ease-out';
    ball.style.bottom = '450px';
    ball.style.left = '60%';

    // ApÃ³s a animaÃ§Ã£o, verifica se entrou na cesta
    setTimeout(() => {
      // Simula a chance da bola entrar
      if (Math.random() > 0.4) {
        message.textContent = 'ðŸŽ‰ Bola na cesta!';
        ball.style.bottom = '50px';
        ball.style.left = '50%';
      } else {
        message.textContent = 'ðŸ˜ž Quase lÃ¡!';
        // Bola cai fora da cesta (um pouco para a esquerda)
        ball.style.bottom = '50px';
        ball.style.left = '40%';
      }
      // ApÃ³s 1.2s volta Ã  posiÃ§Ã£o inicial
      setTimeout(() => {
        ball.style.transition = 'bottom 0.4s ease-in, left 0.4s ease-in';
        ball.style.bottom = '50px';
        ball.style.left = '50%';
        shooting = false;
        message.textContent = '';
      }, 1200);
    }, 600);
  });
</script>
